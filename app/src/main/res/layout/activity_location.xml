<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/fragment"
    android:name="com.dewey.deweyapp.location.LocationActivityFragment"
    tools:layout="@layout/fragment_location" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <EditText
        android:id="@+id/edit_latitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the latitude"/>

    <EditText
        android:id="@+id/edit_longitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the longitude"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="drawMap"
        android:text="@string/button_send" />

    <fragment
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/loc_fragment"
        android:name="com.dewey.deweyapp.location.LocationActivityFragment"
        tools:layout="@layout/fragment_location" />


</LinearLayout>


